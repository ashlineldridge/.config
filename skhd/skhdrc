# Window navigation
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Window swapping
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# Move window position
cmd + alt - h : yabai -m window --warp west
cmd + alt - j : yabai -m window --warp south
cmd + alt - k : yabai -m window --warp north
cmd + alt - l : yabai -m window --warp east

# Move window space
cmd + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1; yabai -m window --focus recent
cmd + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2; yabai -m window --focus recent
cmd + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3; yabai -m window --focus recent
cmd + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4; yabai -m window --focus recent
cmd + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5; yabai -m window --focus recent

# Window rotation
alt - r : yabai -m space --rotate 90

# Window mirroring
alt - x : yabai -m space --mirror x-axis
alt - y : yabai -m space --mirror y-axis

# Window resizing
alt - left  : yabai -m window --resize left:-30:0;  yabai -m window --resize right:-30:0
alt - down  : yabai -m window --resize bottom:0:30; yabai -m window --resize top:0:30
alt - up    : yabai -m window --resize top:0:-30;   yabai -m window --resize bottom:0:-30
alt - right : yabai -m window --resize right:30:0;  yabai -m window --resize left:30:0

# Window balance/reset
alt - b : yabai -m space --balance

# Toggle for floating + centering the selected window
alt - t : yabai -m window --toggle float;yabai -m window --grid 8:8:1:1:6:6

# Switch to space
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
